{
  "context" :  {
    "global": {
      "environment"          : "target",
      "deployment"           : "${ deployment }"
    },
    "aws" :  {
      "iam" :  {
        "enabled" :  true,
        "user_policies_path" :  "${ iam_power_user_policy_path }",
        "users_path" :  "${ iam_users_path }"
      },
      "ec2" :  {
        "add_trusted_ingress" :  {
          "enabled"                     :  false,
          "trust_workstation_source"    :  false,
          "trust_attacker_source"       :  false,
          "trust_target_source"         :  false,
          "additional_trusted_sources"  :  [],
          "trusted_tcp_ports"           :  {
            "from_port" :  0,
            "to_port" :  65535
          }
        }
      },
      "ssm" :  {
        "aws_credentials" :  {
          "enabled" :  true,
          "compromised_keys_user" : "clue.burnetes-${deployment}@interlacelabs"
        }
      },
      "eks" :  {
        "add_iam_user_readonly_user": {
          "enabled": false,
          "iam_user_names": []
        },
        "add_iam_user_admin_user": {
          "enabled": false,
          "iam_user_names": []
        },
        "custom_cluster_roles": [{
          "name": "custom-role-1",
          "enabled": true,
          "iam_user_names": [ "clue.burnetes-${deployment}@interlacelabs" ],
          "rules": [
          {
            "api_groups": ["*"],
            "resources": ["pods"],
            "verbs": ["list"],
            "resource_names": []
          },
          {
            "api_groups": ["*"],
            "resources": ["deployments"],
            "verbs": ["get" ],
            "resource_names": ["s3app"]
          },
          {
            "api_groups": ["*"],
            "resources": ["secrets"],
            "verbs": ["list"],
            "resource_names": []
          },
          {
            "api_groups": ["*"],
            "resources": ["secrets"],
            "verbs": ["get", "patch", "update", "watch"],
            "resource_names": ["s3app-env-vars"]
          },
          {
            "api_groups": ["*"],
            "resources": ["secrets"],
            "verbs": ["get" ],
            "resource_names": ["authapp-env-vars"]
          },
          {
            "api_groups": ["batch"],
            "resources": ["cronjobs"],
            "verbs": ["create", "delete", "get", "list", "patch", "update", "watch"],
            "resource_names": []
          }]
        }]
      }
    },
    "kubernetes" :  {
      "aws": {
        "reloader": {
          "enabled": false
        },
        "app" :  {
          "enabled" :  false,
          "service_port": 8000,
          "trust_target_source": true,
          "trust_attacker_source": true,
          "trust_workstation_source": true,
          "additional_trusted_sources": [],
          "privileged": false,
          "allow_privilege_escalation": false,
          "enable_dynu_dns": false,
          "dynu_dns_domain": "${ target_dynu_dns_domain }"
        },
        "vulnerable" :  {
          "log4j_app" :  {
            "enabled" :  false,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "privileged": false,
            "allow_privilege_escalation": false,
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          },
          "voteapp" :  {
            "enabled" :  false,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          },
          "rdsapp" :  {
            "enabled" :  false,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "privileged": false,
            "allow_privilege_escalation": false,
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          },
          "privileged_pod" :  {
            "enabled" :  false,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "privileged": true,
            "allow_privilege_escalation": false,
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          },
          "root_mount_fs_pod" :  {
            "enabled" :  false,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "privileged": false,
            "allow_privilege_escalation": false,
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          },
          "s3app" :  {
            "enabled" :  false,
            "service_port": 8000,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "privileged": false,
            "allow_privilege_escalation": false,
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          },
          "authapp" :  {
            "enabled" :  false,
            "service_port": 8000,
            "trust_target_source": true,
            "trust_attacker_source": true,
            "trust_workstation_source": true,
            "additional_trusted_sources": [],
            "privileged": false,
            "allow_privilege_escalation": false,
            "enable_dynu_dns": false,
            "dynu_dns_domain": "${ target_dynu_dns_domain }"
          }
        }
      }
    }
  }
}