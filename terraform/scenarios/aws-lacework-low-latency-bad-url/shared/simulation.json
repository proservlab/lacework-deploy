{
  "context" :  {
    "global": {
      "environment"          : "${ environment }",
      "deployment"           : "${ deployment }"
    },
    "aws": {
      "ssm": {
        "target": {
          "connect": {
            "oast": {
              "enabled": true,
              "retry_delay_secs": 86400
            },
            "badip": {
              "enabled": false,
              "iplist_url": "https://raw.githubusercontent.com/firehol/blocklist-ipsets/master/firehol_level2.netset",
              "retry_delay_secs": 86400
            }
          }
        }
      }
    }
  }
}