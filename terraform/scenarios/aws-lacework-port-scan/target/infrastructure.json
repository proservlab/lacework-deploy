{
  "context": {
    "global": {
      "environment"          : "target",
      "deployment"           : "${ deployment }"
    },
    "aws": {
      "region"       : "${ aws_region }",
      "profile_name" : "${ aws_profile }",
      "ec2": {
        "enabled"                       : true,
        "public_network"                : "172.18.0.0/16",
        "public_subnet"                 : "172.18.0.0/24",
        "public_app_network"            : "172.19.0.0/16",
        "public_app_subnet"             : "172.19.0.0/24",
        "private_network"               : "172.16.0.0/16",
        "private_subnet"                : "172.16.100.0/24",
        "private_nat_subnet"            : "172.16.10.0/24",
        "private_app_network"           : "172.17.0.0/16",
        "private_app_subnet"            : "172.17.100.0/24",
        "private_app_nat_subnet"        : "172.17.10.0/24",
        "public_ingress_rules"          : [
          {
            "from_port" :   22,
            "to_port" :     22,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow ssh inbound"
          },
          {
            "from_port" :   80,
            "to_port" :     80,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow http inbound"
          },
          {
            "from_port" :   443,
            "to_port" :     443,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow https inbound"
          },
          {
            "from_port" :   1433,
            "to_port" :     1433,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow mssql ports"
          },
          {
            "from_port" :   3306,
            "to_port" :     3306,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow mysql ports"
          },
          {
            "from_port" :   5000,
            "to_port" :     5000,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow nodejs ports"
          },
          {
            "from_port" :   5432,
            "to_port" :     5432,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow psql ports"
          },
          {
            "from_port" :   5900,
            "to_port" :     5900,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow vnc ports"
          },
          {
            "from_port" :   6379,
            "to_port" :     6379,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow redis ports"
          },
          {
            "from_port" :   8000,
            "to_port" :     9000,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow web service ports"
          },
          {
            "from_port" :   9200,
            "to_port" :     9200,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow elasticsearch ports"
          },
          {
            "from_port" :   27017,
            "to_port" :     27017,
            "protocol" :    "tcp",
            "cidr_block" :  "0.0.0.0/0",
            "description" : "allow mongodb ports"
          }
        ],
        "instances": [
          {
            "name"                      : "external-portscan-target-1",
            "public"                    : true,
            "role"                      : "default",
            "instance_type"             : "t2.micro",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              "ssm_deploy_lacework"                   : "true",
              "ssm_deploy_lacework_syscall"           : "true",
              "ssm_deploy_lacework_code_aware_agent"  : "true"
            },
            "user_data"        : null,
            "user_data_base64" : null,
            "enable_swap"      : true
          },
          {
            "name"                      : "internal-portscan-host-1",
            "public"                    : false,
            "role"                      : "default",
            "instance_type"             : "t2.micro",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              "ssm_deploy_lacework"                   : "true",
              "ssm_deploy_lacework_syscall"           : "true",
              "ssm_deploy_lacework_code_aware_agent"  : "true",
              "ssm_deploy_docker"                     : "true",
              "ssm_exec_docker_nmap_target"         : "true"
            },
            "user_data"        : null,
            "user_data_base64" : null,
            "enable_swap"      : true
          },
          {
            "name"                      : "internal-portscan-target-1",
            "public"                    : false,
            "role"                      : "default",
            "instance_type"             : "t2.micro",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              "ssm_deploy_lacework"                   : "true",
              "ssm_deploy_lacework_syscall"           : "true",
              "ssm_deploy_lacework_code_aware_agent"  : "true"
            },
            "user_data"        : null,
            "user_data_base64" : null,
            "enable_swap"      : true
          }
        ]
      },
      "ssm": {
        "enabled"                           : true,
        "deploy_git"                        : { "enabled" : true },
        "deploy_docker"                     : { "enabled" : true },
        "deploy_inspector_agent"            : { "enabled" : false },
        "deploy_lacework_agent"             : { "enabled" : true },
        "deploy_lacework_syscall_config"    : { "enabled" : true },
        "deploy_lacework_code_aware_agent"  : { "enabled" : true }
      }
    },
    "lacework": {
      "server_url"   : "${ lacework_server_url }",
      "account_name" : "${ lacework_account_name }",
      "profile_name" : "${ lacework_profile }",
      "aws_audit_config": {
        "enabled" : true,
        "enable_cloudtrail_s3_management_events" : true
      },
      "gcp_audit_config": {
        "enabled"    : false
      },
      "custom_policy": {
        "enabled" : false
      },
      "agent": {
        "enabled" : true,

        "kubernetes": {
          "enabled" : false,
          "proxy_scanner": {
            "enabled" : false
          },
          "daemonset": {
            "enabled"        : false,
            "syscall_config_path" : "${ syscall_config_path }"
          },
          "compliance": {
            "enabled" : false
          },
          "eks_audit_logs": {
            "enabled" : false
          },
          "admission_controller": {
            "enabled" : false
          }
        }
      },
      "aws_agentless": {
        "enabled" : true,
        "use_existing_vpc" : true
      },
      "gcp_agentless": {
        "enabled" : false
      },
      "alerts": {
        "enabled" : false,
        "slack": {
          "enabled"   : false,
          "api_token" : "${ slack_token }"
        },
        "jira": {
          "enabled"           : false,
          "cloud_url"         : "${ jira_cloud_url }",
          "cloud_username"    : "${ jira_cloud_username }",
          "cloud_api_token"   : "${ jira_cloud_api_token }",
          "cloud_project_key" : "${ jira_cloud_project_key }",
          "cloud_issue_type"  : "${ jira_cloud_issue_type }"
        }
      }
    },
    "dynu_dns" : {
        "enabled"                        : false
    } 
  }
}