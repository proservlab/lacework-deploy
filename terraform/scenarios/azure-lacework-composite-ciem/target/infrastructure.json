{
  "context": {
    "global": {
      "environment"          : "target",
      "deployment"           : "${ deployment }"
    },
    "azure": {
      "region"                          : "${ azure_region }",
      "subscription"                    : "${ azure_subscription }",
      "tenant"                          : "${ azure_tenant }",
      "compute" : {
        "enabled"                       : true,
        "public_network"                : "172.18.0.0/16",
        "public_subnet"                 : "172.18.0.0/24",
        "public_app_network"            : "172.19.0.0/16",
        "public_app_subnet"             : "172.19.0.0/24",
        "private_network"               : "172.16.0.0/16",
        "private_subnet"                : "172.16.0.0/24",
        "private_nat_subnet"            : "172.16.10.0/24",
        "private_app_network"           : "172.17.0.0/16",
        "private_app_subnet"            : "172.17.0.0/24",
        "private_app_nat_subnet"        : "172.17.10.0/24",
        "public_ingress_rules"          : [],
        "instances": [
          {
            "name"                      : "developer",
            "public"                    : true,
            "role"                      : "app",
            "instance_type"             : "Standard_DS1_v2",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              "runbook_deploy_git"     : "true",
              "runbook_deploy_azure_cli" : "true",
              "runbook_deploy_docker"  : "true",
              "runbook_deploy_lacework": "true",
              "runbook_deploy_lacework_syscall": "true",
              "runbook_deploy_lacework_code_aware_agent": "true",
              "runbook_deploy_log4j_app"                      : "true",
              "runbook_deploy_secret_ssh_private"             : "true",
              "runbook_deploy_secret_azure_credentials"         : "true",
              "runbook_exec_generate_azure_cli_traffic_target"  : "true"
            },
            "user_data"        : null,
            "user_data_base64" : null
          },
          {
            "name"                      : "webserver",
            "public"                    : true,
            "role"                      : "app",
            "instance_type"             : "Standard_DS1_v2",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              "runbook_deploy_git"                                : "true",
              "runbook_deploy_docker"                             : "true",
              "runbook_deploy_lacework"                           : "true",
              "runbook_deploy_lacework_syscall"                   : "true",
              "runbook_deploy_lacework_code_aware_agent"          : "true",
              "runbook_deploy_azuresql_app"                       : "true",
              "runbook_deploy_secret_ssh_public"                  : "true",
              "runbook_exec_generate_web_traffic_target"          : "true"
            },
            "user_data"        : null,
            "user_data_base64" : null
          }
        ]
      },
      "azuresql": {
        "enabled"                         : true,
        "instance_type"                   : "mysql",
        "server_name"                     : "azuresql",
        "db_name"                         : "db",
        "public_network_access_enabled"   : false,
        "service_principal_name"          : "khon-traktour-${deployment}"
      },
      "runbook": {
        "enabled"                        : true,
        "deploy_git"                     : { "enabled" : false },
        "deploy_docker"                  : { "enabled" : false },
        "deploy_lacework_agent"          : { "enabled" : true },
        "deploy_lacework_syscall_config" : { "enabled" : true },
        "deploy_lacework_code_aware_agent" : { "enabled" : true },
        "deploy_azure_cli"               : { "enabled" : true }
      }
    },
    "lacework": {
      "server_url"   : "${ lacework_server_url }",
      "account_name" : "${ lacework_account_name }",
      "profile_name" : "${ lacework_profile }",
      "azure_audit_config": {
        "enabled"    : true,
        "enable_entra_id_activity_logs" : true
      },
      "azure_agentless": {
        "enabled"    : true
      },
      "agent": {
        "enabled" : true,

        "kubernetes": {
          "enabled" : false,
          "proxy_scanner": {
            "enabled" : false
          },
          "daemonset": {
            "enabled"        : false,
            "syscall_config_path" : "${ syscall_config_path }"
          },
          "compliance": {
            "enabled" : false
          },
          "aks_audit_logs": {
            "enabled" : false
          },
          "admission_controller": {
            "enabled" : false
          }
        }
      },
      "custom_policy": {
        "enabled" : true
      },
      "alerts": {
        "enabled" : false,
        "slack": {
          "enabled"   : false,
          "api_token" : "${ slack_token }"
        },
        "jira": {
          "enabled"           : false,
          "cloud_url"         : "${ jira_cloud_url }",
          "cloud_username"    : "${ jira_cloud_username }",
          "cloud_api_token"   : "${ jira_cloud_api_token }",
          "cloud_project_key" : "${ jira_cloud_project_key }",
          "cloud_issue_type"  : "${ jira_cloud_issue_type }"
        }
      }
    },
    "dynu_dns" : {
      "enabled"                        : false
    }
  }
}