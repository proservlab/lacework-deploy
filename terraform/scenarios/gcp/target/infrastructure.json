{
  "context": {
    "global": {
      "environment"          : "target",
      "deployment"           : "${ deployment }"
    },
    "aws": {
      "region"       : "${ aws_region }",
      "profile_name" : "${ aws_profile }"
    },
    "gcp": {
      "region"               : "${ gcp_region }",
      "project_id"           : "${ gcp_project }",
      "gce" : {
        "enabled"                : true,
        "instances"              : [
          {
            "name"                      : "target-public-1",
            "public"                    : true,
            "role"                      : "default",
            "instance_type"             : "e2-micro",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              
            },
            "user_data"        : null,
            "user_data_base64" : null
          },
          {
            "name"                      : "target-private-1",
            "public"                    : false,
            "role"                      : "default",
            "instance_type"             : "e2-micro",
            "ami_name"                  : "ubuntu_focal",
            "tags": {
              
            },
            "user_data"        : null,
            "user_data_base64" : null
          }
        ],
        "public_network"                : "172.18.0.0/16",
        "public_subnet"                 : "172.18.0.0/24",
        "public_app_network"            : "172.19.0.0/16",
        "public_app_subnet"             : "172.19.0.0/24",
        "private_network"               : "172.16.0.0/16",
        "private_subnet"                : "172.16.100.0/24",
        "private_nat_subnet"            : "172.16.10.0/24",
        "private_app_network"           : "172.17.0.0/16",
        "private_app_subnet"            : "172.17.100.0/24",
        "private_app_nat_subnet"        : "172.17.10.0/24"
      },
      "gke"  : {
        "enabled"              : false,
        "cluster_name"         : "target-cluster"
      },
      "osconfig"  : {
        "enabled"                         : false,
        "deploy_git"                      : false,
        "deploy_docker"                   : false,
        "deploy_inspector_agent"          : false,
        "deploy_lacework_agent"           : false,
        "deploy_lacework_syscall_config"  : false
      }
    },
    "lacework": {
      "server_url"   : "${ lacework_server_url }",
      "account_name" : "${ lacework_account_name }",
      "profile_name" : "${ lacework_profile }",
      "gcp_audit_config": {
        "project_id" : "${ gcp_lacework_project }",
        "enabled"    : false
      },
      "custom_policy": {
        "enabled" : false
      },
      "agent": {
        "enabled" : true,

        "kubernetes": {
          "enabled" : false,
          "proxy_scanner": {
            "enabled" : false
          },
          "daemonset": {
            "enabled"        : false,
            "syscall_config_path" : "${ syscall_config_path }"
          },
          "compliance": {
            "enabled" : true
          },
          "gke_audit_logs": {
            "enabled" : false
          },
          "admission_controller": {
            "enabled" : false
          }
        }
      },
      "gcp_agentless": {
        "enabled" : false
      }
    },
    "dynu_dns" : {
      "enabled"                        : false
    } 
  }
}